{
  "name": "yii2-queue-manager-client",
  "version": "0.1.0",
  "description": "Yii2 Queue manager client",
  "main": "src/js/manager.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "shx rm -rf ./build ./dist && shx mkdir dist ",
    "watch": "npm-run-all -p watch:*",
    "watch:css": "npm run build:css:main -- --watch",
    "watch:css:debug": "npm run dev:css:main -- --watch",
    "watch:js-main": "rollup --config configs/rollup.config.main.js --watch",
    "watch:js-jquey": "rollup --config configs/rollup.config.jquery.js --watch",
    "build": "npm-run-all clean -p build:*",
    "build:js": "npm-run-all -p build:js:*",
    "build:js:main": "rollup --config configs/rollup.config.main.js",
    "build:js:main-min": "rollup --config configs/rollup.config.main.js --environment NODE_ENV:production",
    "build:js:jquery": "rollup --config configs/rollup.config.jquery.js",
    "build:js:jquery-min": "rollup --config configs/rollup.config.jquery.js --environment NODE_ENV:production",
    "build:css": "npm-run-all  build:css:*",
    "build:css:main": "sass --embed-source-map  --load-path='./' src/css/main.scss ./build/bundle.css",
    "build:css:colors-classic": "sass --embed-source-map  --load-path='./' src/css/main-colors-classic.scss ./build/bundle-colors-classic.css",
    "postbuild:css": "postcss --verbose --config ./configs ./build/*.css -r  && cleancss  --batch ./build/*.css  --batch-suffix '.min'",
    "postbuild": "npm run publish:copy && npm run publish:rename && npm run publish:examples",
    "publish:copy": "shx rm -rf ./dist && mkdir -p ./dist/js ./dist/css  && cp -r ./build/*.js ./dist/js && cp -r ./build/*.css ./dist/css ",
    "publish:rename": "find ./dist | renamer --find bundle --replace queueMc",
    "publish:examples": "node configs/server.js"
  },
  "author": "somov.nn@gmail.com",
  "license": "MIT",
  "homepage": "https://github.com/somov/yii2-queue-manager-client#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/somov/yii2-queue-manager-client.git"
  },
  "bugs": {
    "url": "https://github.com/somov/yii2-queue-manager-client/issues"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-private-methods": "^7.13.0",
    "@babel/plugin-transform-object-assign": "^7.12.13",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-replace": "^2.4.2",
    "autoprefixer": "^10.2.5",
    "clean-css-cli": "^5.2.2",
    "crc-32": "^1.2.0",
    "dateformat": "^4.5.1",
    "express": "^4.17.1",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.13",
    "postcss-cli": "^8.3.1",
    "postcss-header": "^3.0.1",
    "renamer": "^2.0.1",
    "rollup": "^2.45.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.32.11",
    "shx": "^0.3.3"
  }
}
